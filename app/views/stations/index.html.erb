<br><br><br>
<h1><%= t("Stations Index") %></h1>

<% @stations.each do |station| %>
  <ul>
    <li><%= t("Name") %>: <%= link_to "#{station.name}", "/station/#{station.name}" %>
    </li>
    <li><%= t("Dock Count") %>: <%= station.dock_count %></li>
    <li><%= t("City") %>: <%= station.city %></li>
    <li><%= t("Installation Date") %>: <%= station.installation_date %></li>
    <% if !current_user.nil? && current_user.admin? %>
      <%= link_to 'Edit', edit_admin_station_path(station) %>
      <%= link_to "Delete", admin_station_path(station), method: "delete" %>
    <%end%>
  </ul><br>
<%end%>
