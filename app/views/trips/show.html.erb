<h1><%= "Trip to #{@trip.end_station.name} from #{@trip.start_station.name}"%></h1>

<% if !current_user.nil? && current_user.admin? %>
<td><%= link_to "Edit", edit_admin_trip_path(@trip) %></td>
<td><%= link_to "Delete", admin_trip_path(@trip), method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
<p><%= interpret("Duration")%>: <%= @trip.duration %></p>
<p><%= interpret("Start Date")%>: <%= @trip.start_date %></p>
<p><%= interpret("End Date")%>: <%= @trip.end_date %></p>
<p><%= interpret("Start Station")%>: <%= @trip.start_station.name %></p>
<p><%= interpret("End Station")%>: <%= @trip.end_station.name %></p>
<p><%= interpret("Bike ID")%>: <%= @trip.bike_id %></p>
<p><%= interpret("Subscription Type")%>: <%= @trip.subscription_type %></p>
<p><%= interpret("Zip Code")%>: <%= @trip.zip_code %></p>
